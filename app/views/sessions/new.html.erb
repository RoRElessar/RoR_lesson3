<div class="hero-unit">
  <h1 align="center">Welcome to the Blog!</h1>

  <%unless signed_in?%>
    <h2>Sign in</h2>

      <div>
        <%= form_for(:session, url: sessions_path) do |f| %>

            <%= f.label :email%> <br>
            <%= f.text_field :email, placeholder: 'E-mail'%> <br>

            <%= f.label :password%> <br>
            <%= f.password_field :password, placeholder: 'Password'%> <br>

            <%= f.submit 'Log in', class: 'btn btn-large btn-primary'%>
        <% end %>


        <p>New user? <%= link_to 'Sign up now!', signup_path%></p>
      </div>
  <% else %>
    <h3 align="center">Sorry, but you have to go <%= link_to 'back', current_user %></h3>
  <% end %>
</div>
