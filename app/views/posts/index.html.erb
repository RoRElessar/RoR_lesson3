<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Tags</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= post.tags %></td>
        <td><a class="btn btn-primary"<%= link_to 'Show', post %> </a></td>
        <td><a class="btn btn-warning"<%= link_to 'Edit', edit_post_path(post) %> </a></td>
        <td><a class="btn btn-danger"<%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %> </a></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<a class="btn btn-success"<%= link_to 'New Post', new_post_path %> </a>
